{
  "name": "rn-app-base",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "android": "pnpm android:reverse && react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "android:devices": "adb devices",
    "android:reverse": "adb reverse tcp:8081 tcp:8081",
    "android:logcat": "adb logcat *:S ReactNative:V ReactNativeJS:V",
    "android:restart": "adb shell am force-stop com.rnappbase && npm run android",
    "generate-locales": "node scripts/generate-locales.js",
    "setup-icons": "node scripts/setup-icons.js",
    "check-architecture": "node scripts/check-new-architecture.js",
    "check-system": "node scripts/check-system-requirements.js",
    "codegen": "npx react-native-codegen --config codegenConfig.json"
  },
  "dependencies": {
    "@ant-design/icons-react-native": "^2.3.2",
    "@ant-design/react-native": "^5.4.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.3.14",
    "@react-navigation/native": "^7.1.10",
    "@react-navigation/native-stack": "^7.3.14",
    "@reduxjs/toolkit": "^2.8.2",
    "i18next": "^25.3.0",
    "react": "19.1.0",
    "react-content-loader": "^7.0.2",
    "react-i18next": "^15.5.3",
    "react-native": "0.80.1",
    "react-native-gesture-handler": "^2.27.1",
    "react-native-localize": "^3.4.2",
    "react-native-mmkv": "^3.2.0",
    "react-native-reanimated": "^3.18.0",
    "react-native-safe-area-context": "^5.4.1",
    "react-native-screens": "^4.11.1",
    "react-native-vector-icons": "^10.2.0",
    "react-redux": "^9.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "18.0.0",
    "@react-native-community/cli-platform-android": "18.0.0",
    "@react-native-community/cli-platform-ios": "18.0.0",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "0.79.2",
